{
  "extends": "@tsconfig/recommended",
  "compilerOptions": {
    "outDir": "dist",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "target": "ES2022",
    "module": "nodenext",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "useDefineForClassFields": true,
    "strictPropertyInitialization": false
  },
  "exclude": [
    "node_modules/",
    "dist/",
    "tests/"
  ],
  "include": [
    "./src"
  ]
}
